#plan
    .red_wrapper
        background-color: pr_red
        padding: 3px 0
        position relative
        min-height: 128px;
        &:before
        &:after
            content: ''
            position: absolute
            height 1px
            width: 100%
            left 0
            right 0
            background-color: rgb(255, 255, 255);
            opacity: 0.2;
        &:before 
            top 15px
        &:after
            bottom: 15px
        h3
            color: rgb(255, 255, 255)
            line-height: 1;
            letter-spacing: -0.6px;
            margin-bottom: 31px;
            &:after
                content: url(../img/divider_white.png)
                margin: 19px auto 0
        .button
            margin-top: 35px;
.day_wrapper
    background-image url(../img/bg_dark.jpg)
    background-repeat no-repeat
    background-position: center
    background-size cover
    padding: 22px 0 52px
    .day_container
        display: table
        .day_number
            display: table-cell
            vertical-align: middle
            padding-left: 25px;
        .day_decription
            margin-left: 105px;
            h4
                font-size: 37px;
                font-family: "PlayfairDisplayBlack", serif;
                color: rgb(180, 167, 111);
                text-decoration: underline;
                line-height: 1
                margin-left: 42px;
                margin-bottom: 17px
                letter-spacing: -0.5px;
            .bullits
                li
                    font-size: 20px;
                    font-family: "RobotoRegular", sans-serif;
                    color: rgb(253, 253, 253);
                    line-height: 1.3;
                    list-style none
                    background-image url((../img/bullit.png))
                    background-repeat no-repeat
                    background-position 0 10px
                    margin-bottom: 15px;
                    padding-left: 29px;
    &:nth-of-type(2)
    &:nth-of-type(4)
        background-image url(../img/bg_white.jpg)
        .day_container
            .day_decription
                h4
                    color pr_red
                    margin-left: 60px;
                    letter-spacing: -0.7px;
                    margin-bottom: 20px;
                 .bullits
                    li
                        background-image url((../img/red_bullit.png))
                        color: #162b26
                        background-position: 18px 8px;
                        padding-left: 47px;
