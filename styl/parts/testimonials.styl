#testimonials
    background-image url(../img/testims_bg.jpg)
    background-position center
    background-size: cover
    background-repeat no-repeat
    padding: 50px 0
    .container
        position relative
        h3:after
            margin-bottom: 67px
        .owl-controlls
            top: auto
            bottom: 300px
            width: 1060px;
            margin: 0 auto;
#video_testims
    width: 1038px;
    margin: 0 auto 47px;
    .video_wrapper
        margin-bottom: 35px
        img
        iframe
            border-radius: 5px
#text_testims
    width: 1028px;
    margin: 0 auto
    padding-bottom: 10px
.owl-carousel .owl-item
    padding: 0 10px
.testim_wrapper
    border: 1px solid rgb(154, 137, 88);
    border-radius: 10px;
    background-image: linear-gradient( 0deg, rgb(128,110,63) 15%, rgb(226,218,155) 100%);
    box-shadow: 0px 5px 11px 0px rgba(0, 0, 0, 0.15);
    padding: 14px 20px
    height 500px
.testim_container
    border-radius: 10px;
    background-color: rgb(255, 255, 255);
    box-shadow: 0px 0px 17.67px 1.33px rgba(0, 0, 0, 0.1);
    padding: 55px 70px
    text-align: center
    height 100%
    img
        display block
        margin: 0 auto
    h4
        font-size: 20px;
        font-family: "PlayfairDisplayBlack", serif;
        color: pr_red
        line-height: 1.7;
        margin: 10px 0 14px
    p
        font-size: 18px;
        font-family: "RobotoRegular", sans-serif;
        color: rgb(15, 16, 16);
        line-height: 1.444
        margin: 0