#author
    background-image url(../img/lacy_bg.jpg)
    background-repeat no-repeat
    background-size: cover
    background-attachment fixed
    padding-top 52px
    overflow hidden
    h3
        margin-bottom: -5px
        &:after
            margin-bottom: 0
#janna_about
    position relative
    img
        position: absolute
        top: 0px;
        left: -23px;

#about_description
    padding-top:  52px
    h4
        font-size: 37px;
        font-family: "PlayfairDisplayBlack", serif;
        color: pr_red
        line-height: 1
        margin-bottom: 40px
        margin-left: 8px;
        letter-spacing: -0.5px;
    ul
        padding-left: 8px
        li
            list-style: none
            
            font-size: 20px;
            font-family: "RobotoRegular", sans-serif;
            color: rgb(24, 23, 19);
            line-height: 1.5;
            background-image url((../img/red_bullit.png))
            background-repeat no-repeat
            background-position: 0 8px;
            padding-left: 28px;
            margin-bottom: 3px;
#author_certs
    background: rgb(22,21,17)
    background-image: radial-gradient( 50% 50%, circle closest-side, rgb(41,41,41) 0%, rgb(22,21,17) 100%);
    position: relative
    padding 84px 0
    &:before
    &:after
        content: ''
        position: absolute
        height 1px
        width: 100%
        left 0
        right 0
        background-color #fff
        opacity .2
    &:before
        top 15px
    &:after
        bottom 15px
    .button
        width: 356px;
        line-height: 1.8;
        margin-top: 66px