#main_screen
    background-image: url(../img/main_bg.jpg)
    background-repeat: no-repeat
    background-position: center top
    background-size cover
    width 100%
    overflow: hidden
    padding:0 
#header
    padding: 27px 20px
    overflow hidden
#logo
    float: left
.contacts
    float: right
    text-align: right
    padding-right: 15px;
    .fa
        color: #a19061
        font-size: 20px
        margin: 0 15px 0  40px
        &.fa-phone
            margin-left: 0
    .fa+span
        font-size: 18px;
        font-family: "OpenSansBold", arial;
        color: #fcfafa
        line-height: 26px
        text-align: right;
        &:hover
            text-decoration underline
#first_screen_section
    padding: 0
    .container
        position: relative
        z-index: 9
        padding-bottom: 30px
        .video_wrapper
            width: 41%
            margin: 40px 0 0
            float left
#pre
    font-size: 27px;
    font-family: "RobotoBold", sans-serif;
    color: pr_red
    text-transform: uppercase;
    line-height: 1
    margin: 13px 0 0

.aut_n_date
    overflow hidden
    p
        font-size: 27px;
        font-family: "RobotoBold", sans-serif;
        color: pr_red
        line-height: 1
        float left
        margin-bottom: 0
        &:first-child
            margin-right: 29px
        span
            font-family: 'RobotoBold', sans-serif
            color: #f7f6f6
#janna_main
    position: absolute
    right: -11px;
    bottom: -41px;
#bonus
#home_task
    #pre
        text-align: center
    h1
        text-align: center
        width: auto
    #first_screen_section
        min-height: calc(100vh - 315px)
        .container
            .video_wrapper
                width: 100%
                margin: 40px auto 0
                float none
    .aut_n_date
        margin-top: 20px
        p
            font-size: 18px;
            font-family: "RobotoRegular", sans-serif;
            color: #fff
            line-height: 1.1
            float none
            margin-bottom: 10px
