#main_screen
    background-image: url(../img/main_bg.jpg)
    background-repeat: no-repeat
    background-position: center top
    background-size cover
    width 100%
    overflow: hidden
    padding:0 
#header
    padding: 25px 20px
    overflow hidden
#logo
    float: left
.contacts
    float: right
    text-align: right
    .fa
        color: #a19061
        font-size: 18px
        margin: 0 15px 0  40px
        &.fa-phone
            margin-left: 0
    .fa+span
        font-size: 18px;
        font-family: "OpenSansBold", arial;
        color: #fcfafa
        line-height: 26px
        text-align: right;
        &:hover
            text-decoration underline
#first_screen_section
    padding: 0
    .container
        position: relative
        z-index: 9
        padding-bottom: 35px
        .video_wrapper
            width: 41%
            margin: 40px 0 0
            float left
#pre
    font-size: 27px;
    font-family: "RobotoBold", sans-serif;
    color: pr_red
    text-transform: uppercase;
    line-height: 1

.aut_n_date
    overflow hidden
    p
        font-size: 27px;
        font-family: "RobotoBold", sans-serif;
        color: pr_red
        line-height: 1
        float left
        &:first-child
            margin-right: 50px
        span
            font-family: 'RobotoBold', sans-serif
            color: #f7f6f6
#janna_main
    position: absolute
    right 0
    bottom: 0