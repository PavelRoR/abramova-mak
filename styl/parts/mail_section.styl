#mail_section
    background-color pr_red
    width 100%
    padding: 29px 0
    overflow: hidden
    position relative
    &:before
    &:after
        content: ''
        position: absolute
        background-color: rgb(255, 255, 255);
        opacity: 0.3
        width: 100%
        height: 1px;
        left 0
        right 0
    &:before
        top 15px
    &:after
        bottom: 15px
